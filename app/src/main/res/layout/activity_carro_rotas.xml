<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474747"
    tools:context=".SOLID.activitys.CarroRotasActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/button_stroke_squad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/testeImagem"
            android:layout_width="117dp"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/rta" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:text="Vistoria Veicular"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblMecanica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Checklist Mecânico"
            android:textAllCaps="true"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <LinearLayout
            android:id="@+id/layoutChecklist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblMecanica">

            <Spinner
                android:id="@+id/dishesCategorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_stroke_squad_white_block" />

            <!-- ÁGUA DO RADIADOR -->
            <LinearLayout
                android:id="@+id/row_agua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Água do Radiador"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_agua_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_agua_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- ÓLEO DO MOTOR -->
            <LinearLayout
                android:id="@+id/row_oleo_motor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Óleo do Motor"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_oleo_motor_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_oleo_motor_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- ÓLEO DE FREIO -->
            <LinearLayout
                android:id="@+id/row_oleo_freio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Óleo de Freio"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_oleo_freio_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_oleo_freio_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- ÓLEO DE DIREÇÃO -->
            <LinearLayout
                android:id="@+id/row_oleo_direcao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Óleo de Direção"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_oleo_direcao_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_oleo_direcao_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- FARÓIS -->
            <LinearLayout
                android:id="@+id/row_farois"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Faróis"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_farois_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_farois_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- PISCAS -->
            <LinearLayout
                android:id="@+id/row_piscas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Piscas (Setas)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_piscas_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_piscas_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- LUZ DE FREIO -->
            <LinearLayout
                android:id="@+id/row_luz_freio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Luz de Freio"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_luz_freio_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_luz_freio_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- LUZ DE RÉ -->
            <LinearLayout
                android:id="@+id/row_luz_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Luz de Ré"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_luz_re_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_luz_re_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- PNEUS -->
            <LinearLayout
                android:id="@+id/row_pneus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calibragem Pneus"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_pneus_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_pneus_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- STEP -->
            <LinearLayout
                android:id="@+id/row_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Step (Reserva)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_step_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_step_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- CHAVE DE RODAS -->
            <LinearLayout
                android:id="@+id/row_chave_rodas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chave de Rodas"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_chave_rodas_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_chave_rodas_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- MACACO -->
            <LinearLayout
                android:id="@+id/row_macaco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Macaco"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/chk_macaco_ruim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruim"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />

                <CheckBox
                    android:id="@+id/chk_macaco_bom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:background="#666666"
            app:layout_constraintTop_toBottomOf="@id/layoutChecklist" />

        <TextView
            android:id="@+id/lblFotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Registros Fotográficos"
            android:textAllCaps="true"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <LinearLayout
            android:id="@+id/layoutFotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/lblFotos">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nível de Combustível"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnFotoCombustivel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_stroke_squad"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/imgPreviewCombustivel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:background="#333333"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estado do Parabrisa"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnFotoParabrisa"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_stroke_squad"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/imgPreviewParabrisa"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:background="#333333"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Defeitos na Lataria"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnFotoLataria"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_stroke_squad"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/imgPreviewLataria"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:background="#333333"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="Finalizar Vistoria"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/layoutFotos"
            tools:layout_editor_absoluteX="29dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
